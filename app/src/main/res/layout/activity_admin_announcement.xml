<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dullCyan"
    tools:context=".Admin_Announcement">

    <TextView
        android:id="@+id/textView"

        android:layout_width="414dp"
        android:layout_height="584dp"
        android:background="@drawable/white_textview"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="0dp"
        android:layout_height="71dp"

        android:background="@drawable/nav_design"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageView7"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:elevation="2dp"
        android:background="@color/Cyan"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView27"
        app:srcCompat="@drawable/ic_baseline_qr_code_24"
        tools:ignore="ImageContrastCheck" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Cyan"

        app:layout_constraintTop_toTopOf="@id/imageView7"
        app:layout_constraintBottom_toBottomOf="@id/imageView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imageView7"
        app:srcCompat="@drawable/ic_baseline_mail_outline_24"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="671dp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"

        android:background="@color/dullCyan"
        android:fontFamily="sans-serif"
        android:text="ANNOUNCEMENT"
        android:textColor="@color/Cyan"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="HEADING"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="180dp" />

    <EditText
        android:id="@+id/textView41"
        android:layout_width="354dp"
        android:layout_height="62dp"

        android:hint="  Enter the Heading"
        tools:ignore="TextContrastCheck"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="214dp" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="DATE"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="295dp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:hint="  DD-MM-YYYY"
        android:inputType="date"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="329dp" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="DESCRIPTION"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="393dp" />

    <EditText
        android:id="@+id/textView44"

        android:layout_width="354dp"
        android:layout_height="62dp"

        android:hint="  Enter the Details"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="427dp" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="PRICE"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="507dp" />

    <EditText
        android:id="@+id/textView46"
        android:layout_width="354dp"
        android:layout_height="62dp"

        android:hint="  Enter the Price if applicable"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="541dp" />

</androidx.constraintlayout.widget.ConstraintLayout>